<div class="card">
  <div class="card-header">
    <h4 class="card-title">Forgot your password?</h4>
  </div>
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "first name", id: "floatingInput" %>
        <%= f.label :email, for: "floatingInput" %><br />
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-dark" %>
      </div>
    <% end %>

    <p>
      
    </p>

    <%= render "devise/shared/links" %>


  </div>

</div>