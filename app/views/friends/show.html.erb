<div class="mb-4 p-5 bg-dark text-white rounded">
  <h1><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p><%= @friend.phone %> | <%= @friend.email %> | <%= @friend.twitter %> </p>

  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> |

  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>

<p> </p>
  <%= button_to "Destroy this friend", @friend, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger" %>

</div>